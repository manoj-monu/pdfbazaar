{
    "routes": [
        {
            "src": "/sitemap.xml",
            "dest": "/sitemap.xml",
            "headers": {
                "Content-Type": "application/xml; charset=utf-8",
                "Cache-Control": "public, max-age=86400"
            }
        },
        {
            "src": "/robots.txt",
            "dest": "/robots.txt",
            "headers": {
                "Content-Type": "text/plain; charset=utf-8"
            }
        },
        {
            "src": "/ads.txt",
            "dest": "/ads.txt",
            "headers": {
                "Content-Type": "text/plain; charset=utf-8"
            }
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}